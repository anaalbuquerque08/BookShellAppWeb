@page
@model BookShellAppWeb.Pages.Marcas.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Marcas</h1>

<p>
    <a asp-page="Create">Criar nova marcs</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca[0].Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Marca) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MarcaId">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.MarcaId">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.MarcaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
