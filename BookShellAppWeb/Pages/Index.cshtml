@page
@model IndexModel


<div class="row">
    @foreach (var item in Model.ListaLivros)
    {
         <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card" style="width: 17rem; margin-top: 25px">
                <img src="@item.ImagemUri" class="p-3" style="border-radius: 25px">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">@item.Descricao</p>
                    <a class="btn btn-primary" 
                    asp-page="/Detalhes" 
                    asp-route-slug="@item.NomeSlug"
                    asp-route-id="@item.LivrosId">Ver Mais</a>
                </div>
            </div>
        </div>
    }
</div>
