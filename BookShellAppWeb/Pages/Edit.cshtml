@page
@model BookShellAppWeb.Pages.EditModel

<div class="row pt-5">
	<div class="col-md-4">
		<form method="post">
			<h4>Alteração de Livros</h4>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	        <input type="hidden" asp-for="Livros.LivrosId"/>
			
			<div class="form-group">
			   <label asp-for="Livros.Nome" class="control-label"></label>
				<input asp-for="Livros.Nome" class="form-control" />
				<span asp-validation-for="Livros.Nome" class="text-danger"></span>
		   </div>
			<div class="form-group">
				<label asp-for="Livros.Descricao" class="control-label"></label>
				<input asp-for ="Livros.Descricao" class="form-control" />
				<span asp-validation-for="Livros.Descricao" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Livros.ImagemUri" class="control-label"></label>
				<input asp-for="Livros.ImagemUri" class="form-control" />
				<span asp-validation-for="Livros.ImagemUri" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Livros.Valor" class="control-label"></label>
				<input asp-for="Livros.Valor" class="form-control" />
				<span asp-validation-for="Livros.Valor" class="text-danger"></span>
			</div>
			

		    <div class="form-group mt-3 mb-3">
				<input class="form-check-input" asp-for="Livros.EntregaExpressa" />
				<label asp-for="Livros.EntregaExpressa"></label>
			</div>

			<div class="form-group">
				<label asp-for="Livros.DataCadastro" class="control-label"></label>
				<input asp-for="Livros.DataCadastro" class="form-control" />
				<span asp-validation-for="Livros.DataCadastro" class="text-danger"></span>
			</div>
			<div class="form-group mt-3 mb-3">
				<label asp-for="Livros.MarcaId" class="control-label"></label>

				<select class="form-select"
						asp-for="Livros.MarcaId"
						asp-items="Model.MarcaOptionItems">
					<option value="">Selecione uma opção</option>
				</select>

				<span asp-validation-for="Livros.MarcaId" class="text-danger">
				</span>
			</div>


		   <div class="form-group mt-4">
			   <input type="submit" value="Salvar" class="btn btn-primary"/>
				<input type="submit" value="Excluir" class="btn btn-primary" asp-page-handler="Exclusao"/>
				
		   </div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}